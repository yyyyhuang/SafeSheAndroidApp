<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchActivity">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/contact_outline" />

    <ImageView
        android:id="@+id/emergency_contact"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_outline_phone_24" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/varela_round"
        android:text="SafeShe\nis protecting you!"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/dog"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/dog"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/slogan"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="#000000"
        android:text="Track Location" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#F8F6F6"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Start" />


</RelativeLayout>